@* way to declare the model type *@
@* @model is a directive to use declare the model type *@

@model IEnumerable<OdeToFood.Data.Models.Restaurant>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <div>There are @Model.Count() restaurants in db</div>
    @* Below syntax can be used if model type is not declared *@
    <div>There are @Enumerable.Count(Model) restaurants in db</div>
</div>
